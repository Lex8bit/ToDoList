<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialogLabel"
        android:text="Add Item"
        android:textSize="26sp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/dialogInput"
        android:hint="Add data here"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dialogLabel"/>
    <Button
        android:id="@+id/dialogOkButton"
        android:text="Ok"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/dialogCancelButton"
        app:layout_constraintTop_toBottomOf="@+id/dialogInput"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/dialogCancelButton"
        android:text="Cancel"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/dialogOkButton"
        app:layout_constraintTop_toBottomOf="@+id/dialogInput"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>